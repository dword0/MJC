<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".intro.IntroNavigationActivity">

    <LinearLayout
        android:layout_width="@dimen/size_intro_nav_card"
        android:layout_height="@dimen/size_intro_nav_card"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/ll_start_engineer"
        android:background="@drawable/field_bg_grey"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageView
            android:layout_width="@dimen/size_into_card_imageview"
            android:layout_height="@dimen/size_into_card_imageview"
            android:layout_gravity="center"
            android:src="@drawable/ic_architecture" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/text_engineer"
            android:textColor="@color/mjc_blue"
            android:textSize="@dimen/text_size_20"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/size_intro_nav_card"
        android:layout_height="@dimen/size_intro_nav_card"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/field_bg_grey"
        android:gravity="center"
        android:id="@+id/ll_start_consume"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageView
            android:layout_width="@dimen/size_into_card_imageview"
            android:layout_height="@dimen/size_into_card_imageview"
            android:layout_gravity="center"
            android:src="@drawable/ic_businessman" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/text_consumer"
            android:textColor="@color/mjc_blue"
            android:textSize="@dimen/text_size_20"
            android:textStyle="bold" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>