<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="0dp"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true"
    android:padding="20dp"
    >



<LinearLayout
    android:layout_width="match_parent"
    android:minWidth="@dimen/height_card_consumer"
    android:minHeight="@dimen/height_card_consumer"
    android:background="@drawable/field_bg_blue"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/llHomeTileView"
    android:padding="10dp"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:text="@string/text_house"
        android:textSize="@dimen/text_size_16"
        android:textStyle="bold"
        android:layout_gravity="end"
        android:id="@+id/tvHomeItemName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:layout_width="@dimen/size_home_imageview"
        android:layout_height="@dimen/size_home_imageview"
        android:layout_margin="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_house"
        android:id="@+id/ivHomeItemIcon"
        android:layout_gravity="center"
        app:layout_constraintTop_toTopOf="parent" />


</LinearLayout>
</androidx.cardview.widget.CardView>